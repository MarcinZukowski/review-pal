{
  "manifest_version": 2,
 
  "name": "Review Pal",
  "version": "0.5.2",
  "description": "Code-reviewer life improvements for GitHub and Crucible",

  "permissions": [
    "storage",
    "tabs"
  ],

  "web_accessible_resources": [
    "images/*"
  ],

  "background": {
    "service_worker": "Background.js"
  },

  "content_scripts": [{
    "run_at": "document_end",
    "css": ["styles.css"],
    "js": [
      "3rd/jquery-3.3.1.slim.min.js",
      "BackendCrucible.js",
      "BackendGitHub.js",
      "Core.js",
      "DiffBlock.js",
      "DiffLine.js"
    ],
    "matches": [
      "https://*/fisheye/cru/*",
      "https://github.com/*/pull/*"
    ]
  }]
}
